<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imageViewCat"
        android:layout_width="@dimen/cat_cell_imagewidth"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/sym_def_app_icon"
       />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_marginLeft="@dimen/view_margin"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCat"
        android:id="@+id/textViewBreedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView

        android:paddingLeft="@dimen/cat_cell_image_width_padding"
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="4"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBreedName" />

    <TextView
        android:textStyle="italic"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginBottom="@dimen/view_margin"
        app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textViewLifeSpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"/>
</android.support.constraint.ConstraintLayout>